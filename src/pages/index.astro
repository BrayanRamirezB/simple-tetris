---
import TetrisGame from '@/components/TetrisGame'
import Layout from '@/layouts/Layout.astro'
---

<Layout>
  <div class='max-w-6xl mx-auto my-10'>
    <div class='flex flex-col items-center justify-center gap-8'>
      <h1
        class='text-6xl font-bold text-center text-neutral-100 hover:scale-110 transition-transform duration-300 cursor-default'
      >
        Simple
        <span
          class='text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-indigo-500'
          >Tetris</span
        >
      </h1>
      <TetrisGame client:load />
    </div>
  </div>
</Layout>
